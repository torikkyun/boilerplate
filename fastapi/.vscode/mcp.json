{
	"servers": {
		"figma": {
			"type": "stdio",
			"command": "npx",
			"args": ["-y", "figma-developer-mcp", "--stdio"]
		},
		"shadcn": {
			"command": "npx",
			"args": ["shadcn@latest", "mcp"]
		},
		"ultracite": {
			"command": "npx",
			"args": ["-y", "mcp-remote", "https://www.ultracite.ai/api/mcp/mcp"]
		},
		"next-devtools": {
			"command": "npx",
			"args": ["-y", "next-devtools-mcp@latest"]
		},
		"context7": {
			"command": "docker",
			"args": ["run", "-i", "--rm", "context7-mcp"]
		}
	}
}
